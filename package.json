{
  "name": "@sprungg/code-mapper",
  "version": "1.2.0",
  "description": "JavaScript/TypeScript project structure analyzer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "glob": "^10.3.10",
    "jsonc-parser": "^3.3.1",
    "parse-gitignore": "^1.0.1",
    "tsconfig": "^7.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/parse-gitignore": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sprungg/code-mapper.git"
  },
  "keywords": [
    "code",
    "analyzer",
    "typescript",
    "javascript"
  ],
  "author": "Johnson Tinuoye <johnsontinuoye@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sprungg/code-mapper/issues"
  },
  "homepage": "https://github.com/sprungg/code-mapper#readme",
  "bin": {
    "code-mapper": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ]
}
